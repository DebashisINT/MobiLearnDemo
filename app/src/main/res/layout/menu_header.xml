    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_105sdp"
            android:background="@drawable/menu_top_design"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_250sdp"
                android:layout_gravity="center"
                app:cardElevation="@dimen/_4sdp"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginLeft="@dimen/_10sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_picture_menu_adv"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_gravity="left"
                    android:src="@drawable/user_img"
                    app:civ_border_color="@color/trans_50"
                    app:civ_circle_background_color="#0001070F"
                    app:civ_fill_color="@color/black"
                    app:civ_border_width="@dimen/_3sdp"
                    app:civ_border_overlay="false" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_adv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center|top"
            android:padding="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_250sdp"
                android:layout_gravity="center"
                app:cardElevation="@dimen/_5sdp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/ic_logout2_adv"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:gravity="top"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_menu_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_20sdp"
        android:text="User Name"
        android:gravity="left"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_menu_adv_login_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Login Time"
            android:gravity="left|center|top"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/tv_menu_adv_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="App Version"
            android:gravity="right|center|top"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/search_icon_"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_8sdp"/>

            <EditText
                android:id="@+id/et_search_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search here"
                android:textSize="@dimen/_12sdp"
                android:singleLine="true"
                android:textColorHint="#a4a4a4"
                android:background="@color/transparent"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_menu_adv_voice"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                app:cardCornerRadius="@dimen/_250sdp"
                android:layout_gravity="center"
                app:cardElevation="@dimen/_5sdp"
                app:cardBackgroundColor="#33bda5"
                android:layout_marginRight="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:background="@drawable/ic_mic_white"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>